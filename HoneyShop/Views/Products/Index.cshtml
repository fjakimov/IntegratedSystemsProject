@model List<Domain.Models.Product>

<h1 class="text-center mt-3">Product List</h1>

@if (User.IsInRole("Admin"))
{
    <div class="text-end mb-3">
        <a asp-action="CreateNewProduct" asp-controller="Products" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>
}

<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/placeholder.png")"
                 alt="@product.Name"
                 class="product-image" />
            <h3>@product.Name</h3>
            <p class="description">@product.Description</p>
            <p class="price"><strong>$@product.Price</strong></p>

            <form asp-action="AddToCart" asp-controller="ShoppingCart" method="post" class="cart-form">
                <input type="hidden" name="SelectedProductId" value="@product.Id" />
                <input type="number" name="quantity" value="1" min="1" max="@product.Stock" class="quantity-input" />
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
            </form>

            @if (User.IsInRole("Admin"))
            {
                <div class="admin-actions">
                    <a asp-action="UpdateProduct" asp-controller="Products" asp-route-id="@product.Id"
                       class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="DeleteProduct" asp-controller="Products" asp-route-id="@product.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this product?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin: 20px;
        padding: 20px;
    }

    .product-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        padding: 16px;
        transition: transform 0.3s ease-in-out;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .product-image {
        width: 100%;
        height: auto;
        max-height: 220px;
        border-radius: 12px;
        object-fit: cover;
    }

    .product-card h3 {
        font-size: 1.3rem;
        margin: 12px 0;
    }

    .description {
        font-size: 0.9rem;
        color: #6c757d;
        margin: 8px 0;
    }

    .price {
        font-size: 1.1rem;
        font-weight: bold;
        color: #333;
    }

    .quantity-input {
        width: 60px;
        text-align: center;
        margin-top: 8px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .btn-success, .btn-warning, .btn-danger {
        width: 100%;
        margin-top: 10px;
    }

        .btn-success:hover {
            background-color: #28a745;
        }

        .btn-warning:hover {
            background-color: #ffc107;
        }

        .btn-danger:hover {
            background-color: #dc3545;
        }

    .admin-actions {
        margin-top: 12px;
    }

    .cart-form {
        margin-top: 10px;
    }
</style>
